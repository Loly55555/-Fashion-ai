  <script>
    function showDesigns() {
      const designs = [
        "تصميم موقع فاخر",
        "هوية بصرية راقية",
        "متجر إلكتروني أنيق",
        "عرض منتجات متحرك"
      ];
      let html = "<ul>";
      designs.forEach(d => html += `<li>${d}</li>`);
      html += "</ul>";
      document.getElementById("design-list").innerHTML = html;
    }
  </script>

