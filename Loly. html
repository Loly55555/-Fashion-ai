    <script>
        function showDesigns() {
            const designs = [
                "تصميم موقع تجاري عصري",
                "تصميم بورتفوليو شخصي",
                "تصميم متجر إلكتروني",
                "تصميم مدونة إبداعية"
            ];
            let html = "<ul>";
            designs.forEach(d => {
                html += `<li>${d}</li>`;
            });
            html += "</ul>";
            document.getElementById("design-list").innerHTML = html;
        }
    </script>

